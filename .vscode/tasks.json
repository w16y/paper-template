{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build DOCX (default)",
      "type": "shell",
      "command": "make",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Build DOCX (no timestamp)",
      "type": "shell",
      "command": "make",
      "args": ["TIMESTAMP=false"],
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Build DOCX for current file",
      "type": "shell",
      "command": "make",
      "args": ["INPUT=${fileBasename}"],
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Clean output",
      "type": "shell",
      "command": "make",
      "args": ["clean"],
      "problemMatcher": []
    },
    {
      "label": "Show help",
      "type": "shell",
      "command": "make",
      "args": ["help"],
      "problemMatcher": []
    }
  ]
}
